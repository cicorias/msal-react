{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch node",
            "protocol": "inspector",
            "port": 9229,
            "localRoot": "${workspaceRoot}/src/ex1",
            "sourceMaps": true,
            "trace": true,
            "args": [
                "--inspect"
            ],
            "program": "${file}"
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/src/ex1",
            "userDataDir": "${workspaceRoot}/src/ex1/.vscode/chrome"
            // "sourceMapPathOverrides": {
            //     "webpack:///src/*": "${webRoot}/*"
            // }
        }
    ]
}